{
  "parser": "@babel/eslint-parser",
  "ignorePatterns": "build/**/*",
  "env": {
    "es6": true,
    "browser": true,
    "es2021": true
  },
  "extends": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "off",
      {
        "singleQuote": true,
        "semi": false,
        "trailingComma": "none",
        "lineWith": 140
      }
    ]
  },
  "plugins": [
    "prettier"
  ]
}